<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
                <value id="fonts_googleapis" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
                <value id="fonts_gstatic" type="host">fonts.gstatic.com</value>
                <value id="fonts_alma" type="host">cdn.almapay.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="alma_api" type="host">*.getalma.eu</value>
                <value id="almapay_api" type="host">*.almapay.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="data" type="host">data:</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="getalma.eu" type="host">*.getalma.eu</value>
                <value id="almapay.com" type="host">*.almapay.com/</value>
                <value id="stripe.com" type="host">*.stripe.com/</value>
                <value id="checkout.com" type="host">*.checkout.com/</value>
                <value id="adyen.com" type="host">*.adyen.com/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
