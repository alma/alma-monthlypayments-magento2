{
    "name": "alma/alma-monthlypayments-magento2",
    "description": "Integrates Alma Monthly Payments into Magento 2",
    "require": {
        "php": ">=7.1",
        "alma/alma-php-client": ">=1.3.1"
    },
    "type": "magento2-module",
    "version": "2.3.0",
    "license": [
        "MIT"
    ],
    "autoload": {
        "files": [ "registration.php" ],
        "psr-4": {
            "Alma\\MonthlyPayments\\": ""
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require-dev": {
        "magento/module-sales": ">=100.0.2",
        "magento/module-csp": ">=100.0.2",
        "magento/module-checkout": ">=100.0.2",
        "magento/module-payment": ">=100.0.2",
        "magento/framework": ">=100.0.2",
        "magento/magento-composer-installer": "*",
        "magento/module-sample-data": "^100.4"
    }
}
